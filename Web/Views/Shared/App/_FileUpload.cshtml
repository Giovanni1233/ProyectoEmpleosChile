<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-4">

        @if (ViewBag.ReferenciaUrlCV != null && ViewBag.ReferenciaUrlCV != "")
        {
            <div class="primary dspl-inline-block" style="border-radius: 15px; text-align: left; color:#fff; padding: .84rem 2.14rem; margin: .375rem;">
                <i class="fas fa-file-pdf fa-2x" style="margin-right:5px;"></i>
                <span style="display: inline-block; margin-top: -4px;">
                    <i style="font-size: 14px; font-style: normal; display: block; margin-bottom: -8px;">
                        @ViewBag.ReferenciaDocumento
                    </i>
                    <span style="display: inline-block; margin-top: 5px;">
                        
                            <a href="@ViewBag.ReferenciaUrlCV" id="downloadCV" style="color:#fff;">
                                <i class="fas fa-file-download" style="display: inline; cursor:pointer; margin: 5px;"> </i>
                            </a>
                            <a href="#" id="deleteCV" onclick="deleteCV(this)" style="color:#fff;" data-user="@ViewBag.ReferenciaIdUser">
                                <i class="fas fa-trash" style="display: inline; cursor:pointer; margin: 5px;"></i>
                            </a>
                    </span>
                </span>
            </div>
        }
        else
        {
            using (Html.BeginForm("SetFileCV", "App", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" id="fileCV" name="file" style="display: none;" accept="application/pdf" onchange="uploadCV(this)"/>
                <button id="uploadCVFile" style="display: none;"></button>
            }
            <button id="uploadfile" class="btn btn-primary dspl-inline-block" style="border-radius: 15px; text-align: left;">
                <i class="fas fa-file-pdf fa-2x" style="margin-right:5px;"></i>
                <span style="display: inline-block; margin-top: -4px;">
                    <i style="font-size: 14px; font-style: normal; display: block; margin-bottom: -5px;">@ViewBag.ReferenciaMsg1</i>
                    <i style="font-size: 12px; font-style: normal; display: block;">@ViewBag.ReferenciaMsg2</i>
                </span>
            </button>
        }
    </div>

    <div id="errorUploadCV" class="col-12 col-sm-12 col-md-12 col-lg-4" style="margin-top:25px;">
        @*<span style="background-color: #FFDADA; width: 100%; padding: 15px; border-radius: 20px;"></span>*@
    </div>
</div>

