@if (ViewBag.ReferenciaBusquedaEmpleos.Count > 0)
{


    <div class="row">
        <div class="col-md-9 col-sm-12 col-lg-9 col-xl-9">
            <h3>Publicaciones</h3>
        </div>
        <div class="col-md-3 col-lg-3 col-xl-3">

        </div>
    </div>

    <hr />
    <div class="detalle">
        @foreach (var item in ViewBag.ReferenciaBusquedaEmpleos as IEnumerable<Model.Models.DetallePublicacion>
            )
        {
            <div class="row">
                <div class="col-md-12 col-sm-12 col-lg-12 col-xl-12" id="card-3">
                    <div class="card" style="box-shadow:none; border:1px solid #ccc;">
                        <div class="card-body">

                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="font-weight-bold text-uppercase mb-1">
                                        @item.FechaPublicacion
                                    </div>

                                </div>
                                <div class="col-auto">
                                    <p>@item.AutorPublicacion</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mr-12">
                                    @if (item.DiscapacidadPub == "1")
                                    {
                                        <span class="badge badge-info">Apto para personas con discapacidad</span>
                                    }
                                </div>
                                <div class="col-auto">
                                    <span class="badge badge-danger">Se precisa Urgente</span>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <p>@item.ContadorVotos evaluaciones</p>
                                    <p>Sueldo a pagar: $ @item.MontoPublicacion</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Empleos", "App", new { nombrePublicacion = "", comuna = "", idPublicacion = item.IdPublicacion })" class="text-primary" title="Ver publicacion" style="width: 100%; color:#808080;">
                                @item.TituloPublicacion
                            </a>
                        </div>
                    </div>

                </div>
            </div>
            <hr />
        }
    </div>

}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <div class="error-details">
                    <h4>  No se han encontrado publicaciones.</h4>
                </div>

            </div>
        </div>
    </div>
}