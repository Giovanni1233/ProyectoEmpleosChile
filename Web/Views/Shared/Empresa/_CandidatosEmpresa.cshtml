@if (ViewBag.ReferenciaCandidatosEmpresa != null && ViewBag.ReferenciaCandidatosEmpresa.Count > 0)
{
    <h3>Candidatos a las publicaciones</h3>
    <hr />
    <div class="row">
        @foreach (var item in ViewBag.ReferenciaCandidatosEmpresa as ICollection<Model.Models.CandidatoEmpleos>)
        {

            <div class="col-md-3">
                <div class="card">

                    <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item.ImagendelUsuario))" style="max-width:100%; height:250px;" />
                    <br />

                    <div class="card-body">
                        <h5 class="card-title">@item.RutCandidato - @item.NombreCandidato - @item.ApellidosCandidatos</h5>
                        <p class="card-text">@item.TituloPostulacion - @item.FechaSolicitud</p>
                        <a class="btn btn-success btn-block" href="@Url.Action("PerfilCandidato", "Empresa", new { idUsuario = item.IdCandidato })">Ver perfil</a>
                    </div>
                </div>
            </div>
        }
    </div>
   
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="error-template">

                <div class="error-details">
                    <h4>   No hay candidatos en las publicaciones.</h4>

                </div>

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
}

