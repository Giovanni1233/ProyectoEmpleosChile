@using (Ajax.BeginForm("GuardarPublicacion", "Empresa", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "mensajeRegistro",
    InsertionMode = InsertionMode.Replace,
    LoadingElementId = "loader"
}, new { @style = "display: block;" }))
{
    <div class="modal-header">
        <div class="d-block"><h3>Nueva Publicación</h3></div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

    </div>
    <div class="modal-body">

        <div class="md-form form-sm">
            <input type="hidden" id="id_empresa" name="id_empresa" value="@Session["EmpresaID"]">
            <input type="hidden" id="id_usuario" name="id_usuario" value="@Session["IdUsuario"]">
            <i class="fas fa-pencil-alt prefix" style="margin-top: 4px;"></i>
            <input type="text" id="titulo" name="titulo" autocomplete="off" class="form-control">
            <label for="titulo">Titulo</label>
        </div>
        <div class="md-form form-sm">

            <i class="fas fa-align-left prefix" style="margin-top: 4px;"></i>
            <input type="text" id="descripcionNuevaPub" name="descripcionNuevaPub" autocomplete="off" class="form-control">
            <label for="descripcionNuevaPub">Descripcion</label>
        </div>


        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input name="discapacidad" type="checkbox" value="1"> Este empleo es apto para personas con discapacidad.
                </label>
            </div>
        </div>

        <div class="md-form form-sm">
            <select class="mdb-select md-form" name="area" id="area" searchable="Buscar área..">
                <option value="" disabled selected>Seleccione un área</option>
                <option value="1">Informatica y Tecnologia</option>
                <option value="2">Atencion al Cliente</option>

            </select>
        </div>

        <div class="md-form form-sm">
            <select class="mdb-select md-form" name="subarea" id="subarea" searchable="Buscar subárea..">
                <option value="" disabled selected>Seleccione un subárea</option>
                <option value="1">Internet</option>
                <option value="2">Sistemas</option>
            </select>
        </div>

        <div class="md-form form-sm">
            <select class="mdb-select md-form" name="tipo" id="tipo" searchable="Buscar tipo publicacion..">
                <option value="" disabled selected>Seleccione un tipo de publicación</option>
                <option value="1">Búsqueda</option>
                <option value="2">Oferta</option>
            </select>
        </div>

        <div class="md-form form-sm">

            <i class="fas fa-dollar-sign prefix" style="margin-top: 4px;"></i>
            <input type="text" id="monto" name="monto" autocomplete="off" class="form-control">
            <label for="monto">Monto</label>
        </div>

        <div class="form-check mb-2 mr-sm-2 text-center">
            <button class="btn btn-primary guardarPublicacion">
                <i class="fas fa-save" style="color: #fff;"> Registrar</i>
            </button>
        </div>
    </div>
}