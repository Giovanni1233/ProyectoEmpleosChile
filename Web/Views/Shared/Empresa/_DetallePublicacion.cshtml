@if (ViewBag.DetallePublicacion.Count > 0)
{
    <h3>Detalle Publicacion @ViewBag.NombrePublicacion </h3>
    <hr />
    <div class="card-deck col-md-12">
        @foreach (var item in ViewBag.DetallePublicacion as ICollection<Model.Models.DetallePublicacion>)
        {
            <div class="card col-md-6">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-primary text-uppercase mb-1">
                                @item.TituloPublicacion
                            </div>
                            <div class="col mr-4">
                                @item.DescripcionPublicacion
                            </div>
                            <div class="col mr-4">
                                @item.AutorPublicacion
                            </div>
                            <div class="col mr-4">
                                @item.FechaPublicacion
                            </div>
                        </div>
                        @*<div class="col-auto">
                                <a href="#" onclick="CargoModal(2, '@item.IdPublicacion');" data-toggle="modal" data-target="#modalRegisterForm" data-backdrop="static" data-keyboard="false" title="Editar">Editar</a>
                                <span>&nbsp;&nbsp;</span>

                            </div>*@
                    </div>
                </div>
            </div>


        }

    </div>

    <hr />
