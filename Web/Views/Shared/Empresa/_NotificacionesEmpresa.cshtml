
@if (ViewBag.referenciaNotificaciones.Count > 0)
{
    <div class="row">
        <div class="col-md-9">
            <h3>Notificaciones</h3>
        </div>
        <div class="col-md-3">

        </div>
    </div>

    <hr />
    <div class="row">
        @foreach (var item in ViewBag.referenciaNotificaciones as IEnumerable<Model.Models.NotificacionEmpresa>
            )
        {
            <div class="col-md-3">
                <div class="alert alert-warning" role="alert">
                    @item.tipoNotificacion - @item.fechaNotificacion
                </div>
            </div>


        }
    </div>
    <div class="row">
        <div class="col-md-9">
            <a href="javascript:void(0);">Ver más...</a>
        </div>
        <div class="col-md-3"></div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="error-template">

                <div class="error-details">
                    <h4>   No se encontraron notificaciones.</h4>

                </div>

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>

}
