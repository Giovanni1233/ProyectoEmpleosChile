                    </div>
                    @if (Session["NombreEmpresa"] != null && ((string)Session["NombreEmpresa"]) != "")
                    {
                        <a class="pricing__action contratoPlan btn" href="@Url.Action("Index","Pagos", new { idPlan = item.idPlan })">Escojer plan</a>
                    }
