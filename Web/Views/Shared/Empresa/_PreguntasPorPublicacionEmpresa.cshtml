<h5>Preguntas de la publicacion</h5>
@if (ViewBag.PreguntasPorPublicacionId.Count > 0)
{

    <div class="row">
        <div class="col-md-12">
            <table class="table table-condensed table-hvoer">
                <thead>
                    <tr>
                        <th>Publicación</th>
                        <th>Pregunta</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.PreguntasPorPublicacionId as ICollection<Model.Models.PreguntasPorPublicacion>)
                    {
                        <tr>
                            <td>@item.PublicacionTitulo</td>
                            <td>
                                @item.PreguntaNombre
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12" style="margin: 20px 0px 0px 20px;">
            <div class="error-template">
                <div class="error-details">
                    <h4>  No se encontraron preguntas para esta publicación.</h4>
                </div>
            </div>
        </div>
    </div>
}

