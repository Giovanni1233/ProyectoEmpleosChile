@if (ViewBag.ReferenciaSolicitudes.Count > 0 && ViewBag.ReferenciaSolicitudes != null)
{
    <h5>Solicitudes</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Rut Solicitante</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Publicación</th>
                <th>Perfil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ReferenciaSolicitudes as ICollection<Model.Models.SolicitudesEmpresaPublicacion>)
            {
                <tr>
                    <td>@item.RutSolicitante</td>
                    <td>@item.FechaSolicitud</td>
                    <td>
                        @item.EstadoSolicitud
                    </td>
                    <td>
                        @item.PublicacionSolicitud
                    </td>
                    <td>
                        <a class="btn btn-success" href="@Url.Action("PerfilCandidato", "Empresa", new { idUsuario = item.IdSolicitante })">Ver</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{

    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="error-template">
                
                <div class="error-details">
                    <h4>   No existen solicitudes en la empresa.</h4>

                </div>

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
}

