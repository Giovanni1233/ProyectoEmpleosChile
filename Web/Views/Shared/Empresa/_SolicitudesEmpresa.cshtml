@if (ViewBag.ReferenciaSolicitudes.Count > 0 && ViewBag.ReferenciaSolicitudes != null)
{
    <h5>Solicitudes</h5>
    <table class="table table-bordered" id="tabla">
        <thead>
            <tr>
                <th>Rut Solicitante</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Publicación</th>
                <th>Perfil</th>
                @*<th>Curriculum</th>*@

            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ReferenciaSolicitudes as ICollection<Model.Models.SolicitudesEmpresaPublicacion>)
            {
                <tr>
                    <td>@item.RutSolicitante</td>
                    <td>@item.FechaSolicitud</td>
                    <td>
                        @item.EstadoSolicitud
                    </td>
                    <td>
                        @item.PublicacionSolicitud
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("PerfilCandidato", "Empresa", new { idUsuario = item.IdSolicitante })">Ver</a>
                    </td>
                    @*<td>
                            @if (item.DocNombre != "" && item.DocNombre != null)
                            {
                                <a href="@item.Documento" class="btn btn-primary" id="downloadCV" title="Descargar" style="color:#fff;">Descargar CV
                                    <i class="fas fa-file-download" style="display: inline; font-size:18px; cursor:pointer; margin: 5px;"> </i>
                                </a>
                            }
                            else
                            {
                                <p>No se envia Curriculum Vitae</p>
                            }
                        </td>*@

                </tr>
            }

        </tbody>
    </table>
}
else
{

    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="error-template">

                <div class="error-details">
                    <h4>   No existen solicitudes en la empresa.</h4>

                </div>

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>
}

<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>

<script language="javascript" type="text/javascript">

    $(document).ready(function () {
        $('#tabla').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
        });
    });
</script>

