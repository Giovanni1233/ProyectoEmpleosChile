<div class="col-3 col-sm-12 col-md-3 col-lg-12" id="divDescriocionOficio">
    <h5 style="margin-top: 10px;">Descripción</h5>

    @if (ViewBag.ReferenciaDescripcionOficio != null && ViewBag.ReferenciaDescripcionOficio.Count > 0)
    {
        foreach (Model.Models.DescripcionOficio item in (List<Model.Models.DescripcionOficio>)ViewBag.ReferenciaDescripcionOficio)
        {
            <button id="updDescripcionOficio" class="btn btn-primary btn-sm">
                <i class="fas fa-edit"> Editar</i>
            </button>
            <textarea id="oficioDescripcion" class="form-control" style="width :100%; height:200px;">@item.Descripcion</textarea>


        }
    }
    else
    {

        <textarea id="oficioDescripcion" class="form-control" style="width:100%; height:200px;"></textarea>
        <button id="setDescripcionOficio" class="btn btn-primary btn-sm">
            <i class="fas fa-save"> Guardar</i>
        </button>
    }

</div>
