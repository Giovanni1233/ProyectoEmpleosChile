@if (ViewBag.ReferenciaBusquedaEmpleos.Count > 0 && ViewBag.ReferenciaBusquedaEmpleos != null)
{
    <h3>Usuarios con oficios registrados</h3>
    <div class="row">
        @foreach (var item in ViewBag.ReferenciaBusquedaEmpleos as ICollection<Model.Models.CandidatoUsuarioOficios>)
        {

            <div class="col-md-4 col-lg-4 col-xl-4 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Rut: @item.RutUsuario</h5>
                        <p class="card-text">Nombre: @item.NombreUsuario - @item.ApellidosUsuario</p>
                        <p class="card-text">
                            Oficios:
                            <br />
                            <ul style="list-style:none;">
                                @foreach (var item2 in item.TagOficios as ICollection<Model.Models.DetalleTagOficio>)
                                {
                                    <li>@item2.nombreOficio</li>
                                }

                            </ul>
                        </p>
                        <a href="@Url.Action("PerfilOtroUsuario","Usuario", new { idUsuario = item.IdUsuario })" class="btn btn-block btn-outline-primary">Ver perfil</a>
                    </div>
                </div>
            </div>
            <br />



        }
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <h2 style="color:#808080"> No existen usuarios con oficios registrados.</h2>

        </div>
    </div>

}




