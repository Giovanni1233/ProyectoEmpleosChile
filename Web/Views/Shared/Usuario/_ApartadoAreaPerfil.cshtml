<div class="row border-right">
    <div class="col-md-12">
        <div class="card">
            @if (ViewBag.referenciaImagenPerfil.Count > 0)
            {
                foreach (var item2 in ViewBag.referenciaImagenPerfil as ICollection<Model.Models.ImagenUsuarioPerfil>)
                {
                    <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item2.Imagen))" style="max-width:100%; height:250px;" />
                    <br />
                    <p class="text-center">@item2.NombreImagen</p>
                }
            }
            else
            {
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
            }
            <div class="card-body">
                <h5 class="card-title"></h5>
                @foreach (var itemperfil in ViewBag.referenciaPerfilProfesional as ICollection<Model.Models.PerfilProfesionalUsuario>
                    )
                {
                    <p class="card-text">Titulo Perfil Profesional: @itemperfil.TituloPerfil</p>
                    <p class="card-text">Descripción del perfil: @itemperfil.DescripcionPerfil</p>
                }
            </div>

        </div>
    </div>
</div>
<hr />
<div class="row border-right">
    <div class="col-md-12">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Resumen de postulaciones</h5>
                @if (ViewBag.referenciaContadorPostulaciones.Count > 0)
                {
                    foreach (var itemcontador in ViewBag.referenciaContadorPostulaciones as ICollection<Model.Models.ContadorPostulacionUsuario>)
                    {
                        <p class="card-text">Aplicado en ofertas: <b>@itemcontador.OfertasSolicitadas</b></p>
                        <p class="card-text">Total CV vistos: <b>@itemcontador.CVVistos</b></p>
                        <p class="card-text">En proceso en <b>@itemcontador.EnProceso</b> ofertas.</p>
                    }
                }

            </div>

        </div>
    </div>
</div>

