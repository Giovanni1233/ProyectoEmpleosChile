
@if (ViewBag.MensajesUsuario.Count > 0)
{
    
    <div class="row">
        @foreach (var item in ViewBag.MensajesUsuario as IEnumerable<Model.Models.MensajesUsuario>
            )
        {
            <div class="col-md-4 col-xl-4 col-lg-4 col-xs-6">
                <div class="card">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">

                                <div class="font-weight-bold text-uppercase mb-1">
                                    <p>Fecha: @item.FechaMensaje</p>
                                </div>

                            </div>
                            <div class="col-auto">
                                <p class="font-weight-bold">Receptor: @item.ReceptorMensaje</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mr-2">Mensaje: </div>

                        </div>
                        <div class="row">
                            <div class="col-auto">
                                @item.Mensaje
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-auto">
                                <a href="@Url.Action("Mensajes","Usuario", new { idMensaje = item.idMensaje, idReceptor = item.IdReceptor })" id="verHistorialMensajes">Ver historial...</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12 col-xl-12 col-lg-12 col-xs-12">
            @Html.Partial("Usuario/_HistorialMensajes")
        </div>
    </div>
    
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="error-template">

                <div class="error-details">
                    <h4>   No se encontraron mensajes.</h4>

                </div>

            </div>
        </div>
        <div class="col-md-3">
        </div>
    </div>

}


