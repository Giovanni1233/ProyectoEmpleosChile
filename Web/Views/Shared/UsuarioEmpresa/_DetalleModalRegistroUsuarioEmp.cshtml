@using (Ajax.BeginForm("GuardarUsuarioEmpresa", "Empresa", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "mensajeRegistro",
    InsertionMode = InsertionMode.Replace,
    OnBegin = "ModalShowMensajeRegistro",
    LoadingElementId = "loader"
}, new { @style = "display: block;" }))
{
    <div class="modal-header">
        <div class="d-block"><h3>Nuevo Usuario</h3></div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">

        <div class="md-form form-sm">
            <input type="hidden" id="id_empresa" name="id_empresa" value="@Session["EmpresaID"]" />
            <i class="fas fa-pencil-alt prefix" style="margin-top: 4px;"></i>
            <input type="text" id="rut" name="rut" autocomplete="off" class="form-control">
            <label for="rut">Rut</label>
        </div>

        <div class="md-form form-sm">
            <i class="fas fa-user prefix" style="margin-top: 4px;"></i>
            <input type="text" id="nombres" name="nombres" autocomplete="off" class="form-control">
            <label for="nombres">Nombres</label>
        </div>

        <div class="md-form form-sm">
            <i class="fas fa-signature prefix" style="margin-top: 4px;"></i>
            <input type="text" id="apellido" name="apellido" autocomplete="off" class="form-control">
            <label for="apellido">Apellido</label>
        </div>

        <div class="md-form form-sm">

            <select class="mdb-select md-form" name="perfil" id="perfil" searchable="Buscar perfil..">
                <option value="" disabled selected>Seleccione un perfil</option>
                <option value="1">Administrador</option>
                <option value="2">Normal</option>

            </select>
        </div>


        <div class="md-form form-sm">
            <i class="fas fa-lock prefix" style="margin-top: 4px;"></i>
            <input type="password" id="password" name="password" autocomplete="off" class="form-control">
            <label for="password">Contraseña</label>
        </div>

        <div class="md-form form-sm">
            <i class="fas fa-lock prefix" style="margin-top: 4px;"></i>
            <input type="password" id="passwordRepetir" name="passwordRepetir" autocomplete="off" class="form-control">
            <label for="passwordRepetir">Repetir Contraseña</label>
        </div>

        <div class="md-form form-sm">
            <i class="fas fa-envelope prefix" style="margin-top: 4px;"></i>
            <input type="text" id="correo" name="correo" autocomplete="off" class="form-control">
            <label for="correo">Correo</label>
        </div>

        <div class="form-check mb-2 mr-sm-2 text-center">
            <button type="submit" class="btn btn-primary guardarUsuarioEmpresa">
                <i class="fas fa-save" style="color: #fff;"> Registrar</i>
            </button>
        </div>
    </div>

}
