@if (ViewBag.referenciaPlanEmpresa > 0)
{

    if (ViewBag.referenciaPlanEmpresa == 1 || ViewBag.referenciaPlanEmpresa == 2 || ViewBag.referenciaPlanEmpresa == 3 || ViewBag.referenciaPlanEmpresa == 4)
    {
        if (ViewBag.referenciaContadorUsuarioEmpresaNuevo == ViewBag.TrabajadoresPermitidosEmpresa)
        {
            @Html.Partial("Empresa/_ErrorMaximoTrabajadores")
        }
        else
        {
            @Html.Partial("UsuarioEmpresa/_DetalleModalRegistroUsuarioEmp")
        }

    }
}
else
{
    @Html.Partial("Empresa/_ErrorMaximoTrabajadores")
}
