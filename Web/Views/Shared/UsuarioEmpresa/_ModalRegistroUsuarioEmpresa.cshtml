@using (Ajax.BeginForm("GuardarUsuarioEmpresa", "Empresa", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "mensajeRegistro",
    InsertionMode = InsertionMode.Replace,
    OnBegin = "ModalShowMensajeRegistro",
    LoadingElementId = "loader"
}, new { @style = "display: block;" }))
{
    <div class="modal-header">
        <div class="d-block"><h3>Nuevo Usuario</h3></div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>
    <div class="modal-body">

        <div class="form-group">
            <input type="hidden" id="id_empresa" name="id_empresa" value="@Session["EmpresaID"]">

            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Rut</label>
            <input type="text" name="rut" id="rut" class="form-control soloRut" placeholder="Ej. 12345678-k" autocomplete="off" maxlength="12" style="font-family: 'Roboto', sans-serif;" />
            <span id="rutError" class="error-span"></span>
        </div>
        <div class="form-group">

            <s<label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Nombre</label>
            <input type="text" name="nombres" id="nombres" class="form-control" maxlength="30" autocomplete="off" style="font-family: 'Roboto', sans-serif;" />
        </div>

        <div class="form-group">
            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Apellido</label>
            <input type="text" name="apellido" id="apellido" class="form-control" maxlength="30" autocomplete="off" style="font-family: 'Roboto', sans-serif;" />
        </div>

        <div class="form-group">
            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Perfil</label>
            <select name="perfil" id="perfil" class="form-control">
                <option value="1">Administrador</option>
                <option value="2">Normal</option>
            </select>
        </div>

        <div class="form-group">
            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Correo</label>
            <input type="text" name="correo" id="correo" class="form-control" maxlength="50" autocomplete="off" style="font-family: 'Roboto', sans-serif;" />
        </div>

        <div class="form-group">
            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Contraseña</label>
            <input type="password" name="password" id="password" class="form-control" maxlength="50" autocomplete="off" style="font-family: 'Roboto', sans-serif;" />
        </div>

        <div class="form-group">
            <label style="margin-bottom: 5px; margin-top:5px;" for="tipo">Repetir Contraseña</label>
            <input type="password" name="passwordRepetir" id="passwordRepetir" class="form-control" maxlength="50" autocomplete="off" style="font-family: 'Roboto', sans-serif;" />
        </div>
        <div class="form-check mb-2 mr-sm-2 text-center">
            <button type="submit" class="btn btn-primary guardarUsuarioEmpresa">
                <i class="fas fa-save" style="color: #fff;"> Registrar</i>
            </button>
        </div>
    </div>

}