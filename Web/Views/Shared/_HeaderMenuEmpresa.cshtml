<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Optional: include a polyfill for ES6 Promises for IE11 -->
    <script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

    @Styles.Render("~/bundles/jqueryuicss")
    @Styles.Render("~/bundles/bootstrapcss")
    @Styles.Render("~/bundles/appcss")
    @Styles.Render("~/bundles/logincss")
    @Styles.Render("~/bundles/MaterialDesign")
    @Styles.Render("https://use.fontawesome.com/releases/v5.8.2/css/all.css")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/libraryjs")


    <style>
        .btn-link, ul > li > a {
            color: #fff;
        }
    </style>
</head>

<body>
    <div style="width: 100%; top: 0px; z-index: 999;" class="header-background">
        <div class="row" style="width: 99%; margin: auto auto auto 5px;">
            <div class="col-6 col-sm-6 col-md-4 col-lg-2">
                <div style="margin-top:10px; text-align: center;">

                    <a href="javascript:void(0);">
                        <h3 style="color:#fff;">Empleos Chile</h3>
                    </a>

                </div>
            </div>

            <div class="col-3 col-sm-3 col-md-4 col-lg-6 float-left">
            </div>
            <div class="col-3 col-sm-3 col-md-4 col-lg-4 float-right">
                <nav id="navbar-example2" class="navbar">

                    <ul class="nav nav-pills">


                        @if (Session["NombreEmpresa"] != null && ((string)Session["NombreEmpresa"]) != "")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Principal","Empresa")">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link NewPublicacion" href="javascript:void(0);">Publicar</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@Session["NombreEmpresa"]</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Trabajadores","Empresa")">Trabajadores</a>
                                    <a class="dropdown-item" href="@Url.Action("CandidatosEmpresa","Empresa")">Candidatos</a>
                                    <a class="dropdown-item" href="@Url.Action("Solicitudes","Empresa")">Solicitudes</a>
                                    <a class="dropdown-item" href="@Url.Action("UsuariosOficios","Empresa")">Usuarios con Oficios</a>
                                    @*<a class="dropdown-item" href="#one">Publicaciones</a>*@
                                    <a class="dropdown-item" href="@Url.Action("PerfilEmpresa","Empresa")">Perfil</a>
                                    <a class="dropdown-item" href="@Url.Action("PagosEmpresa","Empresa")">Pagos y Devoluciones</a>
                                    @*<a class="dropdown-item" href="@Url.Action("Configuracion","Empresa")">Configuracion</a>*@
                                    <a class="dropdown-item" href="@Url.Action("NotificacionesM","Empresa")">
                                        Mensajes
                                    </a>
                                    <div role="separator" class="dropdown-divider"></div>
                                    <a class="dropdown-item signOut" href="javascript:void(0);">Cerrar Sesión</a>
                                </div>
                            </li>
                            <!-- SE DEBE QUITAR -->
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("PlanesEmpresa","Empresa")">Planes</a>
                            </li>
                            <!-- SE DEBE QUITAR -->

                        }
                        else
                        {
                            if (Session["Usuario"] != null && ((string)Session["Usuario"]) != "")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index","UsuarioEmpresa")">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link NewPublicacion" href="javascript:void(0);">Publicar</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@Session["NombreUsuario"]</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Trabajadores","UsuarioEmpresa")">Trabajadores</a>
                                        <a class="dropdown-item" href="@Url.Action("CandidatosEmpresa","UsuarioEmpresa")">Candidatos</a>
                                        <a class="dropdown-item" href="@Url.Action("Perfil","UsuarioEmpresa")">Perfil</a>
                                        <div role="separator" class="dropdown-divider"></div>
                                        <a class="dropdown-item signOut" href="javascript:void(0);">Cerrar Sesión</a>
                                    </div>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Inicio", "App")">Inicio</a>
                                </li>
                                <li class="nav-item signInEmpresa">
                                    <a class="nav-link" href="javascript:void(0);">Iniciar Sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Registro","Empresa")">Registrarse</a>
                                </li>
                                @*<li class="nav-item signInUsuarioEmpresa">
                                    <a class="nav-link" href="javascript:void(0);">Inicio Usuario Empresa</a>
                                </li>*@
                            }

                        }
                    </ul>
                </nav>
            </div>

        </div>
    </div>


    <div class="modal fade" id="modalSignInEmpresa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("Empresa/_ModalInicioSesionEmpresa")
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalSignInUsuarioEmpresa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("UsuarioEmpresa/_ModalInicioSesionUsuarioEmpresa")
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalRegistroPublicacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("Empresa/_ModalRegistroPublicacion")
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalNotificacionesEmpresa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @Html.Partial("Empresa/_ModalNotificaciones")
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalPlanesEmpresa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                @Html.Partial("Empresa/_ModalPlanesEmpresa")
            </div>
        </div>
    </div>

    <div class="row" style=" width: 100%;">
        @RenderBody()
        @Scripts.Render("~/bundles/appjs")
    </div>

</body>
</html>